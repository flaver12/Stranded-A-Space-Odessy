<?xml version="1.0" encoding="uft-8"?>
<Furnitures>
    <Furniture objectType="furn_SteelWall">
        <Name>Basic Wall</Name>
        <MovementCost>0</MovementCost>
        <Width>1</Width>
        <Height>1</Height>
        <LinksToNeighbours>true</LinksToNeighbours>
        <EnclosesRooms>true</EnclosesRooms>

        <BuildingJob jobTime="1">
            <Item objectType="Steel Plate" amount="5"/>
        </BuildingJob>
        <DeconstructJob>
            <Item objectType="Steel Plate" amount="3"/>
        </DeconstructJob>
    </Furniture>

    <Furniture objectType="Door">
        <Name>Door</Name>
        <MovementCost>1</MovementCost>
        <Width>1</Width>
        <Height>1</Height>
        <LinksToNeighbours>false</LinksToNeighbours>
        <EnclosesRooms>true</EnclosesRooms>
        
        <OnTick functionName="Door_OnTickAction" />
        <OnIsEnterable functionName="Door_IsEnterable" />
        <Params>
            <Param name="openness" value="0" />
            <Param name="isOpening" value="0" />
        </Params>

        <BuildingJob jobTime="1">
            <Item objectType="Steel Plate" amount="2"/>
        </BuildingJob>
        <DeconstructJob>
            <Item objectType="Steel Plate" amount="1"/>
        </DeconstructJob>
    </Furniture>

    <Furniture objectType="Stockpile">
        <Name>Stockpile</Name>
        <Width>1</Width>
        <Height>1</Height>
        <MovementCost>1</MovementCost>
        <LinksToNeighbours>true</LinksToNeighbours>
        <OnTick functionName="Stockpile_OnTickAction" />
    </Furniture>

    <Furniture objectType="Oxygen Generator">
        <Name>O2 Generator</Name>
        <MovementCost>10</MovementCost>
        <Width>2</Width>
        <Height>2</Height>

        <OnTick functionName="O2Generator_OnTickAction" />
        <Params>
            <Param name="gas_per_tick" value="0.01" />
            <Param name="gas_limit" value="0.2" />
        </Params>
    </Furniture>

    <Furniture objectType="Mining Drone Station">
        <Name>Mining Station</Name>
        <MovementCost>1</MovementCost>
        <Width>3</Width>
        <Height>3</Height>
        
        <OnTick functionName="MiningDroneStation_TickAction" />

        <JobSpotOffset X="1" Y="0"/>
        <JobSpawnSpotOffset X="0" Y="0" />
    </Furniture>
</Furnitures>